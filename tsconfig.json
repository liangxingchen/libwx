{
  "compilerOptions": {
    "strict": true,
    "newLine": "lf",
    "moduleResolution": "node16",
    "module": "node16",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "lib",
    "baseUrl": "./src",
    "paths": {
      "*": ["../typings/*"]
    },
    "target": "ES2017",
    "lib": ["ES7", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
